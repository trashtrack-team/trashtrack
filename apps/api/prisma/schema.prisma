generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  username    String   @unique
  password    String
  phoneNumber String
  role        Role
  active      Boolean
  description String?
  report      Report[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  operator
  admin
}

model TrashBin {
  id          Int           @id @default(autoincrement())
  name        String
  latitude    Float
  longitude   Float
  description String?
  openCount   Int           @default(0)
  subTrashBin SubTrashBin[]
  report      Report[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model SubTrashBin {
  id              Int       @id @default(autoincrement())
  trashBinId      Int
  trashBin        TrashBin? @relation(fields: [trashBinId], references: [id])
  name            String
  maxCapacity     Float     @default(0)
  currentCapacity Float     @default(0)
  trash           Trash[]
  history         History[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Trash {
  id            Int          @id @default(autoincrement())
  subTrashBinId Int
  subTrashBin   SubTrashBin? @relation(fields: [subTrashBinId], references: [id])
  createdAt     DateTime     @default(now())
}

model History {
  id              Int          @id @default(autoincrement())
  subTrashBinId   Int
  subTrashBin     SubTrashBin? @relation(fields: [subTrashBinId], references: [id])
  maxCapacity     Float
  currentCapacity Float
  createdAt       DateTime     @default(now())
}

model Report {
  id          Int        @id @default(autoincrement())
  trashBinId  Int
  trashBin    TrashBin?  @relation(fields: [trashBinId], references: [id])
  userId      Int?
  user        User?      @relation(fields: [userId], references: [id])
  nik         String
  name        String
  phoneNumber String
  imagePath   String
  description String
  status      Int        @default(0)
  feedback    Feedback[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Feedback {
  id          Int      @id @default(autoincrement())
  reportId    Int
  report      Report?  @relation(fields: [reportId], references: [id])
  title       String
  description String
  createdAt   DateTime @default(now())
}
