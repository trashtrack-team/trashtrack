generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  username String @unique
  password String
  phoneNumber String
  role Role
  active Boolean
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  operator
  admin
}

model TrashBin {
  id Int @id @default(autoincrement())
  name String
  latitude Float
  longitude Float
  description String?
  openCount Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}